//Implement list using array 

#include<stdio.h>
#define MAX 100
int list[MAX];
int n = 0;             // n holds the actual number of variable in the list

void InsertInBeg(int value){
    if(n >= MAX){
        printf("List is full !!!\n");
        return;
    }
    for(int i = n-1; i>=0; i--){
        list[i+1] = list[i];
    }
    list[0] = value;
    n++;     
    printf("Element inserted !!!\n");
}


void InsertAtEnd(int value){
    if(n==MAX){
        printf("List is full!!!");
        return;
    }
    list[n++]=value;
    printf("Element inserted!!");
}


void InsertAtPos(int pos,int value){
    if(n==MAX){
        printf("List is full!!!");
    }
    else if(pos<0 || pos>=n ){
        printf("Invalid position!!!");  
    }
    else{                                   
        for(int i=n-1; i>=pos; i--){
            list[i+1]=list[i];
        }
        list[pos]=value;
        n++;
        printf("Element inserted!!!");
    }                              
}


void DeletefromBeg(){
    if(n == 0 ){
        printf("List is empty!!!\n");
        return;
    }
    for(int i=0; i<n; i++){
        list[i] = list[i+1];
    }
    n--;
    printf("Element Deleted!!!\n");
}


void DisplayList(){
    if(n==0){
        printf("List is empty!!!");
        return;
    }
    for(int i=0;i<n;i++){
        printf("%d\t",list[i]);
    }
    printf("\n");
}


void DeleteFromEnd(){
     if(n == 0 ){
        printf("List is empty!!!\n");
        return;
    }
    n--;
    printf("Element deleted!!!");
}


void DeleteFromPos(int pos){
     if(n==0){
        printf("List is empty!!!\n");
    }
    else if(pos<0 || pos>=n){
        printf("Invalid position!!!\n");
    }
    for(int i=pos;i<n;i++){
        list[i]=list[i+1];
    }
    n--;
}


int Search(int val){       //Linear Search
    for(int i=0;i<n;i++){
        if(list[i]==val){
            return i;
        }
    }                
    return -1;                       
}


void BubbleSort(){
    for(int i=0;i<n-1;i++){
        for(int j=0;j<n-i-1;j++){
            if(list[j]>list[j+1]){
                int temp = list[j];
                list[j]=list[j+1];
                list[j+1]=temp;
            }
        }
    }
    printf("Elements sorted");
}


void UpdateList(int pos,int data){
    if(n==0)
        printf("List is empty!!!");
    else if(pos<0 || pos>=n)
        printf("Invalid position!!!");
    else{
        list[pos]=data;
        printf("Element updated!!!");
    }
}
int main(){
    while(1){
        printf("1. Insert in beginning\n");
        printf("2. Insert at end\n");
        printf("3. Insert at specified postion\n");
        printf("4. Delete from beginning\n");
        printf("5. Delete from end \n"); 
        printf("6. Delete from specified position\n");
        printf("7. Display list\n");
        printf("8. Search element in list\n");
        printf("9. Update list element\n");
        printf("10. Sort element of list \n");
        printf("11. Exit\n");
        int choice, data, pos,val;
        printf("Enter choice:");
        scanf("%d", &choice);
        switch(choice){
            case 1:
                printf("Enter Data: ");
                scanf("%d", &data);
                InsertInBeg(data);
                break;
            case 2:
                printf("Enter Data: ");
                scanf("%d", &data);
                InsertAtEnd(data);
                break;
            case 3:
                printf("Enter Position: ");
                scanf("%d", &pos);
                printf("Enter Data: ");
                scanf("%d", &data);
                InsertAtPos(pos,data);;
                break;
            case 4:
                DeletefromBeg();
                break;
            case 5:
               DeleteFromEnd();
                break;
            case 6:
               printf("Enter position:");
                scanf("%d",&pos);
                DeleteFromPos(pos);
                break;
            case 7:
                DisplayList();
                break;
            case 8:
                printf("Enter element:");
                scanf("%d",&val);
                int index;
                index = Search(val);
                if(index!=-1){
                    printf("Element found at %d\n",index);
                }
                else
                    printf("Element not found!!");
                break;
            case 9:
               printf("Enter position:");
               scanf("%d",&pos);
               printf("Enter element:");
               scanf("%d",&data);
               UpdateList(pos,data);
                break;
            case 10:
               BubbleSort();
                break;
            case 11:
                exit(0);
                break;
            default:
                printf("Invalid choice !!!\n");
            
        }
        printf("\n\n");
    }
    return 0;
}
