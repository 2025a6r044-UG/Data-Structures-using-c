#include<stdio.h>
#include<stdlib.h>
#define MAX 100
int stack[MAX], top=-1;

int isEmpty(){
    return top == -1;
}


int isFull(){
    return top == MAX-1;
}

void push(int val){
    if(isFull())
        printf("Stack Overflow!!!");
    else{
        stack[++top]=val;
        printf("Pushed %d into the stack",val);
    }
}


int pop(){
    if(isEmpty()){
        printf("Stack underflow, cannot pop from empty stack");
        return -1;
    }
    else{
        int val = stack[top];
        top--;
        return val;
    }
}


int peek(){
    if(isEmpty()){
        printf("Stack underflow, cannot peek from empty stack");
        return -1;
    }
    else 
        return stack[top];
}


void show(){
    if(isEmpty()){
        printf("Stack is empty!!");
    }
    else{
        printf("Stack elements are:\n");
        for(int i=top;i>=0;i--){
            printf("%d\n",stack[i]);
        }
    }

}
int main(){
    while(1){
        printf("1. Push");
        printf("2. Pop");
        printf("3. Peek");
        printf("4. Show");
        printf("5. Exit\n");
    }
    int choice,data,res;
    printf("Enter choice:");
    scanf("%d",&choice);
    switch(choice){
    case 1:
        printf("Enter value:");
        scanf("%d",&data);
        push(data);
        break;
    case 2:
         res=pop();
        if(res != -1)
            printf("\n%d pop from the stack\n",res);
        break;
    case 3:
        res =peek();
        if(res != -1)
          printf("\n%d is available at top of the stack");
        break;
    case 4:
        show();
        break;
    case 5:
    exit(0);
        break;
    default:
        printf("Invalid choice!!");
    }
    return 0;
}
